<?xml version="1.0" encoding="UTF-8"?>
<feature
  id="org.metaborg.spoofax.eclipse.meta.feature"
  plugin="org.metaborg.spoofax.eclipse.meta"
  version="2.0.0"
  label="Spoofax Eclipse meta-tooling"
>
  <requires>
    <import plugin="org.eclipse.ui"/>
    <import plugin="org.eclipse.core.runtime"/>
    <import plugin="org.eclipse.core.resources"/>
    <import plugin="org.eclipse.ant.core"/>
    <import plugin="org.eclipse.ui.console"/>
    <import plugin="org.eclipse.jface"/>
    <import plugin="org.eclipse.ui.workbench"/>
    <import plugin="org.eclipse.ui.ide"/>
    <import plugin="org.apache.ant" version="1.9.2" match="greaterOrEqual"/>
  </requires>

  <includes
    id="org.metaborg.spoofax.eclipse.feature"
    version="2.0.0"
    search-location="both"
  />

  <!-- Spoofax meta-tooling -->
  <plugin
    id="org.metaborg.meta.core"
    version="2.0.0"
    unpack="false"
  />
  <plugin
    id="org.metaborg.spoofax.meta.core"
    version="2.0.0"
    unpack="false"
  />
  <plugin
    id="org.metaborg.spoofax.eclipse.meta"
    version="2.0.0"
    unpack="false"
  />

  <!-- Parser -->
  <plugin
    id="sdf2table.core"
    version="2.0.0"
    unpack="false"
  />

  <!-- Meta languages, unpack plugins for access to jar, ctree, and packed.esv files. -->
  <plugin
    id="dynsem.eclipse"
    version="2.0.0"
    unpack="true"
  />
  <plugin
    id="org.metaborg.meta.lang.aterm.eclipse"
    version="2.0.0"
    unpack="true"
  />
  <plugin
    id="org.metaborg.meta.lang.esv.eclipse"
    version="2.0.0"
    unpack="true"
  />
  <plugin
    id="org.metaborg.meta.lang.nabl.eclipse"
    version="2.0.0"
    unpack="true"
  />
  <plugin
    id="org.metaborg.meta.nabl2.shared.eclipse"
    version="2.0.0"
    unpack="true"
  />
  <plugin
    id="org.metaborg.meta.nabl2.lang.eclipse"
    version="2.0.0"
    unpack="true"
  />
  <plugin
    id="org.metaborg.meta.nabl2.runtime.eclipse"
    version="2.0.0"
    unpack="true"
  />
  <plugin
    id="org.metaborg.meta.lang.sdf.eclipse"
    version="2.0.0"
    unpack="true"
  />
  <plugin
    id="org.metaborg.meta.lang.stratego.eclipse"
    version="2.0.0"
    unpack="true"
  />
  <plugin
    id="org.metaborg.meta.lang.template.eclipse"
    version="2.0.0"
    unpack="true"
  />
  <plugin
    id="org.metaborg.meta.lang.ts.eclipse"
    version="2.0.0"
    unpack="true"
  />
  <plugin
    id="org.metaborg.meta.lang.spt.interactive.eclipse"
    version="2.0.0"
    unpack="true"
  />
  <plugin
    id="org.metaborg.meta.lib.analysis.eclipse"
    version="2.0.0"
    unpack="true"
  />
  
  <!-- SPT -->
  <plugin
    id="org.metaborg.mbt.core"
    version="2.0.0"
    unpack="false"
  />
  <plugin
    id="org.metaborg.spt.core"
    version="2.0.0"
    unpack="false"
  />
  <plugin
    id="org.metaborg.meta.lang.spt.eclipse"
    version="2.0.0"
    unpack="true"
  />
  
  <!-- Other dependencies, unpack some plugins for access to its JAR/native files. -->
  <plugin
    id="org.metaborg.spoofax.eclipse.meta.externaldeps"
    version="2.0.0"
    unpack="true"
  />
</feature>
